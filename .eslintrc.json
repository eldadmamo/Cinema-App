{
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "standard"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
  "ecmaFeatures": {
    "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
    },
    "settings": {
      "react": {
       "version": "detect"
      }
    },
    "plugins": [
      "react"
    ],
    "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": [0],
    "camelcase": 0,
    "no-return-assign": 0,
    "react/jsx-uses-react": "off", // No longer needed in React 17+
    "react/jsx-uses-vars": "error" // Ensure JSX components are recognized
    }
  }